{
  "name": "micronova-backend",
  "version": "1.0.0",
  "description": "Academic yet kid-friendly language learning app backend (ages 8-13)",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node src/scripts/seed.js",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": ["education", "language-learning", "kids", "nodejs", "express"],
  "author": "Micronova Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
